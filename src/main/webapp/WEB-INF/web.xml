	<!-- 设置监听器  -->
  	<listener>
  		<display-name>myListener</display-name>
  		<listener-class>com.ning.common.listener.MyListener</listener-class>
  	</listener>
  	
  	<error-page>
	     <error-code>404</error-code>
	    <location>/common/404.html</location>
	</error-page>
	
	<error-page>
	    <error-code>500</error-code>
	    <location>/common/500.html</location>
	</error-page>

</web-app>